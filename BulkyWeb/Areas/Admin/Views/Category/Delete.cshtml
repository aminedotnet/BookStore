@model Category

<div class="card shadow border-0 mt-4">
	<div class="card-header m-lg-0 py-0" style="background-color: #192E2F;">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Category</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4" >
		<form method="post" asp-controller="Category" asp-action="delete" class="row">
			<input asp-for="Id" hidden />
			<div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Name" disabled class="form-control border-primar " />
					<label asp-for="Name" class="ms-2"></label>

				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="DisplayOrder" disabled class="form-control border-primar " />
					<label asp-for="DisplayOrder" class="ms-2"></label>

				</div>
				<div class="row pt-2 ">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">
							<i class="bi bi-trash-fill"></i> Delete
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">back to list</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
