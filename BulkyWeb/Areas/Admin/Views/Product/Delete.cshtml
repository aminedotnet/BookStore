@model Product

<div class="card shadow border-0 my-4">
	<div class="card-header m-lg-0 py-0" style="background-color: #192E2F;">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4" >
		<form method="post" asp-controller="Product" asp-action="delete" class="row">
			<input asp-for="Id" hidden />
			<div class="row ">
				<div class="col-10">
					<div>
						<div class="form-floating py-2 col-12">
							<div class="row pl-2 my-3">
								<p class="text-primary lh-sm fw-bold ">@Html.Raw(Model.Title)</p>
								<p class="text-secondary lh-sm">@Html.Raw(Model.Description)</p>
							</div>
						</div>
						<div class="row pt-2 ">
							<div class="col-6 col-md-3">
								<button type="submit" class="btn btn-danger form-control">
									<i class="bi bi-trash-fill"></i> Delete
								</button>
							</div>
							<div class="col-6 col-md-3">
								<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">back to list</a>
							</div>
						</div>
					</div>
				</div>
				<div class="col-2">
					<img src="@Model.ImageUrl" width="100%" style="border-radius:15px;border:1px solid #bbb9b9" />
				</div>
			</div>
		
		</form>
	</div>
</div>
