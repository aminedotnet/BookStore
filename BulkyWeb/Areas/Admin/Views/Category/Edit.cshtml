@model Category
<div class="card shadow border-0 mt-4">
	<div class="card-header m-lg-0 py-0" style="background-color: #192E2F;">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Edit Category</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" asp-controller="Category" asp-action="Edit">
			<input asp-for="Id" hidden />
			<div class="p-3">
				<div class="form-floating py-2 col-12">
					<input asp-for="Name" class="form-control border-primar " />
					<label asp-for="Name" class="ms-2"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="DisplayOrder" class="form-control border-primar " />
					<label asp-for="DisplayOrder" class="ms-2"></label>
					<span asp-validation-for="DisplayOrder" class="text-danger"></span>
				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Update</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">back to list</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>



@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}
