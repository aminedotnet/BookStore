@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header m-lg-0 py-0" style="background-color: #192E2F;">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pb-3">
                <div class="col6 text-end">
                    <a asp-controller="category" asp-action="create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Category
                    </a>
                </div>
            </div>

            <table class="table table-striped table-hover table-borderless">
                <thead>
                    <tr>
                        <th>
                            Category Name
                        </th>
                        <th>
                            Display Order
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td class="w-75 btn-group border-0" role="group">
                                <a asp-controller="category" asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@obj.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="category" asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@obj.Id">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
